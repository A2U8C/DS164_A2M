<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar">
            <TextView
                android:id="@+id/about_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings/About us"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/language_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language Support"
            android:background="#ECECEC"
            android:layout_below="@+id/toolbar"
            android:textSize="18sp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="#2196F3"
            android:paddingLeft="10dp"/>


        <RelativeLayout
            android:id="@+id/language_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/language_topic">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hindi"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_toolbar"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/support_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language Support"
            android:background="#ECECEC"
            android:layout_below="@+id/language_layout"
            android:textSize="18sp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="#2196F3"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/settings_layout3"
            android:layout_below="@+id/support_topic"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Issue"
                android:layout_marginLeft="7dp"
                android:textSize="16sp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="#0F0F0F"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/report_issue"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rightarrow"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7sp"
                android:layout_below="@+id/share_heading" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/settings_layout4"
            android:layout_below="@+id/settings_layout3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Center"
                android:layout_marginLeft="7dp"
                android:textSize="16sp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="#0F0F0F"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/help_center"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rightarrow"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7sp"
                android:layout_below="@+id/share_heading" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/settings_layout5"
            android:layout_below="@+id/settings_layout4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safety Center"
                android:layout_marginLeft="7dp"
                android:textSize="16sp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="#0F0F0F"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/safety_center"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rightarrow"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7sp"
                android:layout_below="@+id/share_heading" />
        </LinearLayout>

        <TextView
            android:id="@+id/more_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Information"
            android:background="#ECECEC"
            android:layout_below="@+id/settings_layout5"
            android:textSize="18sp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="#2196F3"
            android:paddingLeft="10dp"/>
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_information"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="154dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round"
            android:text="Log Out" />

    </RelativeLayout>



</RelativeLayout>